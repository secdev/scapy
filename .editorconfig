# EditorConfig
# http://EditorConfig.org

# top-most EditorConfig file
root = true

# LF end-of-line, insert an empty new line and UTF-8
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Tab indentation
[makefile,Makefile]
indent_style = tab
## PEP 0008 https://www.python.org/dev/peps/pep-0008/
[*.py]
indent_style = space
indent_size = 4
