# define server context manager

class run_smbserver:
   def __init__(self):
      self.proc = None
   
   def __enter__(self):
      # Empty log
      with SMBD_LOG.open('w') as fd:
         fd.write("")
      print("@ Starting smbd server")
      # Start server
      self.proc = subprocess.Popen(["/usr/sbin/smbd", "-F", "-p", "12345", "-s", CONF_FILE, "-l", LOGS_DIR])
      # wait for it to start
      for i in range(10):
         sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
         sock.settimeout(1)
         try:
            sock.connect(("127.0.0.1", 12345))
            break
         except Exception:
            time.sleep(0.5)
         finally:
            sock.close()
      else:
         raise TimeoutError
      print("@ Server started !")
   
   def __exit__(self, exc_type, exc_value, traceback):
      print("@ Stopping smbd server !")
      self.proc.terminate()
      self.proc.wait()
      if traceback:
         # failed
         print("\nTest failed. Smbd logs:")
         with SMBD_LOG.open('r') as fd:
            print(fd.read())
      print("@ smbd server stopped !")
      


